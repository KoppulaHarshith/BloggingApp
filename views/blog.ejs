<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="200px">
        <pre class="mt-1"><%= blog.body%></pre>
    </div>

    <div class="container mt-4 mb-4">
        <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="60px"><i class="container ml-3"><%= blog.createdBy.Name %></i>
    </div>

    <!-- <%= JSON.stringify(locals)%> -->
    <div class="container mt-4">
        <% if (locals.user) { %>
            <h2>Comments  (<%= comments.length%>)</h2>
            <form action="/blog/comment/<%= blog._id%>" method="post">
                <div class="mb-3">
                <input type="text" name="content" class="form-control" placeholder="Enter you comment...">
                <button type="Submit" class="mt-3 btn btn-sm btn-primary">Add</button>
                </div>
            </form>
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div>
                    <img src="<%= comment.createdBy.profileImageURL %>" alt="" width="40px"><%= comment.createdBy.Name %>:<pre class="container ml-5 mt-2"><%= comment.content%></pre> 
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>
</html>